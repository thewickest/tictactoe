{
  "name": "tictactoe",
  "version": "0.0.1",
  "description": "The TicTacToe game",
  "main": "index.js",
  "scripts": {
    "dev:start": "concurrently -n app,api,db \"npm:app:start\" \"npm:api:start\" \"npm:db:start\"",
    "app:start": "npm --prefix ./app run dev",
    "api:start": "npm --prefix ./api run start:dev",
    "app:install": "npm --prefix ./app install",
    "api:install": "npm --prefix ./api install",
    "api:env:link": "cp ./.env.example ./.env && ln -sf ../.env ./api/.env",
    "app:env:link": "cp ./.env.example ./.env && ln -sf ../.env ./app/.env",
    "db:start": "docker-compose up -d",
    "dev:setup": "npm run app:install && npm run api:install && npm install && npm run api:env:link && npm run app:env:link",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thewickest/tictactoe.git"
  },
  "keywords": [
    "tictactoe",
    "nextjs",
    "nestjs",
    "react",
    "mongodb"
  ],
  "author": "Alex Grau",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/thewickest/tictactoe/issues"
  },
  "homepage": "https://github.com/thewickest/tictactoe#readme",
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
